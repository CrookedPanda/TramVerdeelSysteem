<script type="text/javascript">
    function addNumber(n) {
        var t = document.getElementById('TramID');
        if (n == '-1' && t.innerText.length != 0) {
            t.innerText = t.innerText.slice(0, -1);
        }
        else if (n != -1 && t.innerText.length < 4) {
            t.innerText += n;
        }

        var v = document.getElementById('TramNumber');
        v.value = t.innerText;   
    }
</script>

