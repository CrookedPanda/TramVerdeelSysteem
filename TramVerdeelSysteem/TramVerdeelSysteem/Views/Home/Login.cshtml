    <body>
        <div class="wrapper fadeInDown" id="loginwrapper">
            <div id="formContent">
                <div class="fadeIn first">
                    <img src="https://static.thenounproject.com/png/79183-200.png" id="icon" alt="Trein Icoon" />
                </div>

                <!-- Login Form--> 
                <form asp-action="Login">
