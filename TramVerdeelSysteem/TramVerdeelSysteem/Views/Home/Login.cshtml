                    <div class="form-group">
                        <input asp-for="name" type="text" id="login" class="fadeIn second" placeholder="Gebruikersnaam">
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="password" type="password" id="password" class="fadeIn third" placeholder="Wachtwoord">
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input id="submitLogin" type="submit" class="fadeIn fourth" value="Inloggen">
                    </div>
                </form>
            </div>
        </div>
