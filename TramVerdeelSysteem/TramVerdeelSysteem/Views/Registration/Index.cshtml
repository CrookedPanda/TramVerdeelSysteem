@model Model.ViewModels.RegistrationView
@{
    ViewData["Title"] = "Registratie";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>Registratie</h1>

<body>
    <div class="wrapper fadeInDown" id="loginwrapper">
        <div id="formContent">
            <div class="fadeIn first">
                <img src="https://static.thenounproject.com/png/79183-200.png" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form-->
            <form asp-action="Registratie">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Username" type="text" id="username" class="fadeIn second" placeholder="username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" id="password" class="fadeIn third" placeholder="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Roles" type="roles" id="password" class="fadeIn third" placeholder="none">
                    <span asp-validation-for="Roles" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="fadeIn fourth" value="Login">
                </div>
            </form>
        </div>
    </div>
</body>
